<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lego_Ninjago.NinjaDetailWindow"
        Title="Ninja Detail"
        Width="640" Height="420"
        Background="#202020">
    <Grid RowDefinitions="Auto,*,Auto" Margin="16">
        <TextBlock x:Name="TxtTitle"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,12"/>

        <Grid Grid.Row="1" ColumnDefinitions="1*,1*">
            <Border Background="#2b2b2b" CornerRadius="12" Padding="8">
                <Image x:Name="ImgDetail" Stretch="Uniform"/>
            </Border>

            <StackPanel Grid.Column="1" Spacing="8" Margin="16,0,0,0">
                <TextBlock x:Name="TxtElement" FontSize="18" FontWeight="SemiBold"/>
                <TextBlock Text="Abilities:" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <ItemsControl x:Name="ListAbilities">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="• {Binding}" Margin="0,2,0,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Staerken:" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <ItemsControl x:Name="ListStrengths">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="• {Binding}" Margin="0,2,0,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12" Margin="0,12,0,0">
            <Button x:Name="BtnBack" Content="Back" Width="100" Height="36"/>
            <Button x:Name="BtnChoose" Content="Choose" Width="120" Height="36" Background="#3a7" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>