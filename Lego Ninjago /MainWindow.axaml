<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lego_Ninjago.MainWindow"
        Title="Lego Ninjago"
        Background="DimGray"
        Width="900" Height="560"
        MinWidth="720" MinHeight="420">

  <Grid>

    <Grid x:Name="SlideshowView" RowDefinitions="Auto,*" Margin="16">

      <TextBlock Text="Meet the Ninjas!"
                 FontSize="32" FontWeight="Bold"
                 HorizontalAlignment="Center" Margin="0,0,0,12"/>

      <Grid Grid.Row="1">
        <Border CornerRadius="16" Background="#222" Padding="8">
          <Image x:Name="ImgNinja"
                 Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
        </Border>

        <Button x:Name="BtnPrev"
                Content="⟨" Width="44" Height="44" FontSize="24" FontWeight="Bold"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Margin="8" Background="#66000000" BorderBrush="{x:Null}"/>

        <Button x:Name="BtnNext"
                Content="⟩" Width="44" Height="44" FontSize="24" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="8" Background="#66000000" BorderBrush="{x:Null}"/>

        <Button x:Name="BtnDone"
                Content="Done"
                Width="100" Height="40"
                Background= "DimGray"
                FontSize="18" FontWeight="Bold"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,12"
                IsVisible="False"/>  
      </Grid>
    </Grid>
      
    <Grid x:Name="ChooseView"
          IsVisible="False"
          Margin="16"
          RowDefinitions="*,*,*" ColumnDefinitions="*,*,*">

      <Button x:Name="BtnCole" Grid.Row="0" Grid.Column="0"
              Background="Black" Foreground="AliceBlue" FontWeight="Bold"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform"><TextBlock Text="COLE"/></Viewbox>
      </Button>

      <Button x:Name="BtnJay" Grid.Row="0" Grid.Column="2"
              Background="DarkBlue" Foreground="AliceBlue" FontWeight="Bold"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform"><TextBlock Text="JAY"/></Viewbox>
      </Button>

      <Button x:Name="BtnLloyd" Grid.Row="1" Grid.Column="1"
              Background="DarkGreen" Foreground="AliceBlue" FontWeight="Bold"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform"><TextBlock Text="LLOYD"/></Viewbox>
      </Button>

      <Button x:Name="BtnKai" Grid.Row="2" Grid.Column="0"
              Background="Brown" Foreground="AliceBlue" FontWeight="Bold"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform"><TextBlock Text="KAI"/></Viewbox>
      </Button>

      <Button x:Name="BtnZane" Grid.Row="2" Grid.Column="2"
              Background="AliceBlue" Foreground="Black" FontWeight="Bold"
              Margin="8" MinWidth="160" MinHeight="120">
        <Viewbox Stretch="Uniform"><TextBlock Text="ZANE"/></Viewbox>
      </Button>

    </Grid>
  </Grid>
</Window>
